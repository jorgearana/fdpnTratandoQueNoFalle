@model List<InscripcionNatacion.ViewModels.Torneo.EventosViewModel>

@{
    ViewBag.Title = "Eventos";
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Relación de pruebas de la competencia</h2>
                    <h6>No se incluyen las postas</h6>

                    @Html.ActionLink("Regresar al listado", "torneos", "Home", null, new { @class = "btn btn-warning pull-right" })
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables1">
                            <thead>
                                <tr>
                                    <th>
                                        Sesión
                                    </th>
                                    <th>
                                        Nro.
                                    </th>
                                    <th>
                                        S
                                    </th>
                                    <th>
                                        Dist
                                    </th>
                                    <th>
                                        Estilo
                                    </th>
                                    <th>
                                        Edad
                                    </th>
                                    <th>
                                        MM larga
                                    </th>
                                    <th>
                                        MM corta
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
    {
                            <tr>
                                <td class=@("sesion" + item.Sesion.ToString())>
                                    @Html.DisplayFor(modelItem => item.Sesion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Evento.Event_no)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.Evento.Event_gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Evento.Event_dist)
                                </td>

                                @switch (@item.Evento.Event_stroke)
    {
        case "A":
                            <td> Libre</td>
break;
case "B":
                            <td> Espalda</td>
break;
case "C":
                            <td> Pecho</td>
break;
case "D":
                            <td> Mariposa</td>
break;
case "E":
                            <td> Combinado</td>
break;
}

                                <td>
                                    @Html.DisplayFor(modelItem => item.Evento.Low_age) - @Html.DisplayFor(modelItem => item.Evento.High_Age)
                                </td>
                                <td>
                                    @item.MMlargastring
                                </td>
                                <td>
                                    @item.MMCortastring
                                </td>

                            </tr>
}
                            </tbody>
                        </table>

                    </div>
                </div>
                </div>
        </div>
    </div>

</div>

              
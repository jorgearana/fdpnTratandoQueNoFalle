
@model List<InscripcionNatacion.ViewModels.OtraInscripcion.OtroTorneoViewModel> 

@{ 
    FDPN.Models.Rol rol = Session["Rol"] as FDPN.Models.Rol;
}
@foreach (var @item in Model)
{
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <div class="alert alert-warning" role="alert">
                            @item.torneo.Disciplina.TipoDisciplina
                        </div>                      
                        <h3>@item.torneo.Nombre</h3>
                        <div class="dropdown">
                            <div class="btn-group">
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Quiero
                                </button>
                                <ul class="dropdown-menu" style="width: 360px;">
                                    @*<li>@Html.ActionLink("VER DATOS", "Detalle", "torneo", new { id = item.torneo.TorneoId}, null)</li>*@
                                    <li>@Html.ActionLink("VER LAS PRUEBAS", "Eventos", "Otrotorneo", new { TorneoId = item.torneo.TorneoId }, null)</li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("VER LOS INSCRITOS", "ListadosPorPrueba", "Otrotorneo", new { TorneoId = item.torneo.TorneoId }, null)</li>
                                    <li role="separator" class="divider"></li>
                                    @if (item.diferencia > 0)
                                    {
                                        <li>@Html.ActionLink("INSCRIBIR", "HacerIncscripciones", "Otrotorneo", new { TorneoId = item.torneo.TorneoId }, null)</li>
                                        <li>@Html.ActionLink("INSCRIBIR ENTRENADORES", "INDEX", "Otrotorneo", new { TorneoId = item.torneo.TorneoId }, null)</li>
                                    }
                                    <li role="separator" class="divider"></li>

                                    @if (rol.Rol1 == "comision" || rol.Rol1 == "admin")
                                    {
                                        <li>@Html.ActionLink("EXPORTAR", "CrearArchivo", "Otrotorneo", new { TorneoId = item.torneo.TorneoId }, null)</li>

                                        <li> <a href="#" id="btnExportarDelegados" data-Meetid=@item.torneo.TorneoId>EXPORTAR ENTRENADORES</a></li>
                                    }
                                    else
                                    {
                                        if (item.Tieneinscritos)
                                        {
                                            <li>@Html.ActionLink("EXPORTAR RESUMEN PDF", "ImprimirResumen", "Exportar", new { TorneoId = item.torneo.TorneoId }, new { @target = "blank" })</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="activity-stream">
                            <div class="stream">
                                <div class="stream-badge">
                                    <i class="fa fa-clock-o bg-primary"></i>
                                </div>

                                <div class="stream-panel">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="stream-info">

                                                <h4>Inicio del torneo</h4>
                                                <h3>@string.Format("{0:ddd dd MMM yyyy}", item.torneo.FechaInicio)</h3>
                                                @*<h3>@item.torneo.Meet_start.ToString("dd/MMM/yyyy")</h3>*@
                                                <h4>Cierre de inscripciones</h4>
                                                <h3>@string.Format("{0:ddd dd MMM yyyy}", item.torneo.FechaCierre)</h3>

                                            </div>

                                        </div>
                                        <div class="col-lg-8">
                                            @if (item.diferencia > 0)
                                            {
                                                <h3>Tiempo faltante para el cierre de inscripciones</h3>
                                                <div class="clock red" style="margin:2em;" data-countdown="@item.diferencia"></div>
                                            }
                                        </div>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}

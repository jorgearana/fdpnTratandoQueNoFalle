@model InscripcionNatacion.ViewModels.Exportar.ModelAExportar

@{
    Layout = null;
    ViewBag.Title = "Exportar Resumen";
    string path = Url.Content("http://afiliaciones.jorgearananeyra.com/Content/Images/");
    string foto = "";
    string torneo = ViewBag.torneo;
    string equipo = ViewBag.equipo;
    DateTime fecha = ViewBag.fecha;
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="application/pdf; charset=utf-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Resumen de inscripción</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
   

    <link href="../Content/Site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
    <style>
        .col-jorge {
            flex-grow: 1;
            max-width: 40%;
        }
    </style>
</head>
<body style="font-family: 'Roboto Condensed', sans-serif;     font-size: 1rem; line-height: 1;">


    @Html.Partial("_footerheader")

    <div class="navbar navbar-dark bg-primary navbar-fixed-top">
        <div class="row">
            <h4>@torneo </h4>
            
        </div>

    </div>

    <div class="container">
        <div style="display:flex;">
            <h5 style="        margin-left: 5px;  flex-grow: 4; " class="exportar  "><small>Club: </small> @equipo.ToUpper()</h5> 
            <p style="  color:blue;      margin-left: 5px;  flex-grow: 4; " >Impreso el <small>@fecha.ToString("dd/MM/yyyy") a las @fecha.ToShortTimeString()</small></p>
        </div>
        
        <div class="row">


            <table>
                <thead>
                    <tr><th></th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.resumenentradas)
                    {
                        <tr> <td><strong style="color:darkblue">@item.afiliado.Nombre @item.afiliado.Apellido_Paterno </strong> </td></tr>
                        <tr>
                            <td>
                                <table style="table-layout: fixed; border-bottom:1pt solid black;">
                                    <thead>
                                        <tr>
                                            <th>Numero de prueba</th>
                                            <th>Prueba</th>
                                            <th>Tiempo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detalle in item.detalle)
                                        {

                                            <tr>
                                                <td>@detalle.evento.Event_no</td>
                                                <td>@detalle.evento.Event_gender - @detalle.evento.Event_dist @detalle.estilo.Estilo </td>
                                                <td>@detalle.Marca </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />

            <div> <strong>Nota.- </strong>Si el deportista no está en ninguna prueba se le considera ingresado solo para postas.</div>
            <br />
            <br />
        </div>
    </div>
    <hr />

    <div class="navbar navbar-dark bg-primary navbar-fixed-top">
        <div class="row">
            <h4>Relación de entrenadores afiliados inscritos </h4>
        </div>

    </div>
    <hr />
    <div class="container">

        <h5 style="margin-left:5px;" class="exportar">Entrenadores</h5>
        @************************ entrenadores ******************@
        <ul>
            @foreach (var item in Model.entrenadorInscritos)
            {
                <li> @item.Entrenadores.Nombre @item.Entrenadores.Paterno</li>
            }
        </ul>
    </div>
    <div class="navbar navbar-dark bg-primary navbar-fixed-top">
        <div class="row">
            <h4>Relación de delegados inscritos </h4>
        </div>
    </div>
    <hr />
    <div class="container">
        <h5 style="margin-left:5px;" class="exportar">Delegados</h5>
        @************************ delegados ******************@
        <ul>
            @foreach (var item in Model.delegados)
            {
                <li> @item.Nombre @item.Apellido</li>
            }
        </ul>


    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>

@model List<FDPN.ViewModels.Home.previewNoticiasViewModel>

@{

    string path = Url.Content("~/Content/img/Fotos/");
}


<div class="BannerDelgado u-animation--fadeInSection" style="margin-top:10px;">


    @using (Html.BeginForm("Eventos", "Noticias", FormMethod.Post))
    {
        <div class="BannerDelgadoFoto">
            <center>
                <div class="pure-g cardsubtitulo-blanca">
                    <div class="pure-u-1 pure-u-md-1" style="text-align:center;"><p class="formatted__hugephoto__title TextoBannerDelgado">Eventos y comunicados</p></div>
                </div>
                <div class="pure-g cardsubtitulo-blanca">
                    <div class="pure-u-md-1-6"></div>
                    <div class="pure-u-md-1-6"><p class="">Buscar</p></div>
                    <div class="pure-u-md-1-3">@Html.TextBox("searchString", null, new { @class = "input input--text input--sml input--sml--padded" })</div>
                    <div class="pure-u-md-1-6"> <input type="submit" value="Buscar" class="btn btn--negative btn--sml u-rounded" /> </div>
                    <div class="espaciado"></div>
                </div>
            </center>
        </div>
    }
</div>
<section class="site-news site-homepage__pushup">

    <div class="wrapper site-athleteswidget">
        @if (Model.Count() > 0)
        {
            <div class="pure-g">
                @foreach (var item in Model)
                {
                   
                    <div class="pure-u-lg-5-24 pure-u-md-7-24 pure-u-sm-10-24 marco">
                        <div class="card">
                            <a href=@Url.Action("noticia", "noticias", new { @id= item.noticia.NoticiaId})>
                                <div class="site-news__visual u-animation--fadeInSection" data-wow-duration="700ms" data-wow-delay="100ms">
                                    <div class="item-img-wrap ">
                                        @if (item.fotos.Count() > 0)
                                    {
                                            <div class="ImagenNoticia" style="background-image: url(@Url.Content(path +  item.fotos[0].Nombrefoto))"></div>
                                    }
                                    else
                                    {
                                            <div class="ImagenNoticia" style="background-image: url(@Url.Content(path + "campodemarte.jpg"))"></div>
                                    }
                                    </div><!--item image hover-->

                                </div><!--blog post col end-->
                            </a>
                        </div>
                    </div>

                }
            </div>

        }
        else
        {
            <div class="card pure-u-sm-1 marco">
                <div class="site-news__visual u-animation--fadeInSection" data-wow-duration="700ms" data-wow-delay="100ms">
                    <h3 class="cardsubtitulo">No hemos encontrado resultados</h3>
                </div>
            </div>
        }


            </div>

</section>


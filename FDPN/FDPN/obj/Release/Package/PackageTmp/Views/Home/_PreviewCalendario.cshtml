@model List<FDPN.Models.Calendario>



<div class="site-homepage__pushup">
    <div class="BannerDelgado u-animation--fadeInSection" style="margin-top:10px;">
        <header class="site-homepage__section__header">

            <div class="row cardsubtitulo-blanca">
                <div class="col-lg-12" style="text-align:center;"><p class="formatted__hugephoto__title TextoBannerDelgado">Calendarios</p></div>
            </div>

        </header>
    </div>
    <center>
        <p class="u-type--medium u-type--delta u-spc-bottom--med">Vea la versión imprimible de los calendarios</p>
    </center>
    <div class="wrapper">
        <center>
            <a href="~/Content/pdf/Calendario Masters.pdf" class="btn btn-default  master" target="_blank">Masters</a>

            <a href="~/Content/pdf/Calendario Polo.pdf" class="btn btn-default  wp" target="_blank">Polo acuático</a>

            <a href="~/Content/pdf/Calendario sincro.pdf" class="btn btn-default   sincro" target="_blank">Natación artística</a>

            <a href="~/Content/pdf/Oficial Aguas.pdf" class="btn btn-default   aguas" target="_blank">Aguas abiertas</a>

            <a href="~/Content/pdf/Calendario Natacion.pdf" class="btn btn-default   clavados" target="_blank">Clavados</a>

            <a href="~/Content/pdf/Calendario Natacion.pdf" class="btn btn-default   natacion" target="_blank">Natación</a>

        </center>
    </div>
        <div class="site-homepage__section__content u-grid">
            <section>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-sm-6">
                            <div class="card">
                                <div class="calendarioficha @item.clase">
                                    <div>
                                        <p class="cardsubtitulo-blanca">@item.Inicio.ToString("dd MMM yyyy") - @item.Fin.ToString("dd MMM yyyy")</p>
                                        <hr />
                                        <h3 class="cardtitulo">@item.Evento</h3>
                                        <p class="cardsubtitulo">Sede: @item.Sede</p>
                                    </div>
                                    <div class="@item.clase">
                                        <p class="cardsubtitulo">Disciplina: @item.Disciplina</p>
                                        <p class="cardsubtitulo-blanca">Observaciones: @item.Observación</p>
                                        <p class="cardsubtitulo-blanca">Carácter: @item.Carácter</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="espaciado"></div>
                <center>

                    @Html.ActionLink("Ver todos los eventos", "calendarios", "resultados", null, new { @class = "btn btn--primary btn--lrg u-rounded" })
                </center>
                <div class="espaciado"></div>
            </section>
        </div>
    </div>



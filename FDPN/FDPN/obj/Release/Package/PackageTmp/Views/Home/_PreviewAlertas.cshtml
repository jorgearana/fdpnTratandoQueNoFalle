@model FDPN.ViewModels.Home.AlertasViewModel

@if (Model.cantidad > 0)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-bell"></i> @Model.cantidad</a>
        <ul class="dropdown-menu">
            @foreach (var item in Model.alertas)
            {
                <li class="nav-item">
                    @if(item.Alerta == "Calendario modificado")
                    {
                        @Html.ActionLink(item.Alerta + "el día " + item.Fecha.ToString("dd/MM"), "Calendarios", "resultados")
                    }
                    else
                    {
                        @Html.ActionLink("Noticia : " + item.Alerta, "Noticias", "Noticias")
                    }
                </li>
            }
        </ul>


    </li>
}



@model FDPN.Models.Modals

@if (Model!= null)
{
    <div class="modal fade" id="mostrarmodal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Model.Titulo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@Model.Cuerpo</p>
                    <a href="@Url.Content(Model.Enlace)">

                        <img src=@Url.Content( "~/Content/img/Fotos/" + Model.Image ) />
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn btn--primaryapnea btn--sml u-rounded " data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
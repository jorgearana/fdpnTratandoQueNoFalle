@model FDPN.ViewModels.Resultados.CalendarioViewModel

@{
    ViewBag.Title = "Calendarios";
    //Layout = "~/Views/Shared/_LayoutAnimo.cshtml";
    string path = "~/Content/img/Imgsmall/";
}

<section class="site-homepage__section site-athletedetails">
    <div class="wrapper site-homepage__pushup">

        @using (Html.BeginForm("Calendarios", "Resultados", FormMethod.Post))
        {
            <header class="site-homepage__section__header">
                <h2 class="site-title site-title--ultra site-title--ultra--primary">Calendario anual</h2>
                @Html.DropDownListFor(model => model.disciplina, new SelectList(Model.disciplinas, "DisciplinaID", "TipoDisciplina"), "Filtre por disciplina", new { @class = "js-calendarFilter js-selectEventType input input--select input--med" })
                <input type="submit" value="Buscar" class="btn btn--primaryapnea btn--lrg u-rounded" />
                <div class="espaciado"></div>

            </header>
        }
        <center>
            <p class="u-type--medium u-type--delta u-spc-bottom--med">Vea la versión imprimible de los calendarios</p>
        </center>
        <div class="wrapper">
            <center>
                @Html.ActionLink("Masters", "PrintCalendario", "Calendarios", new { disciplina = 6 }, new { @class = "btn btn-default  master" })

                @Html.ActionLink("Polo Acuático", "PrintCalendario", "Calendarios", new { disciplina = 2 }, new { @class = "btn btn-default  wp" })

                @Html.ActionLink("Natación Artística", "PrintCalendario", "Calendarios", new { disciplina = 4 }, new { @class = "btn btn-default  sincro" })

                @Html.ActionLink("Aguas Abiertas", "PrintCalendario", "Calendarios", new { disciplina = 3 }, new { @class = "btn btn-default  aguas" })

                @Html.ActionLink("Clavados", "PrintCalendario", "Calendarios", new { disciplina = 5 }, new { @class = "btn btn-default  clavados" })

                @Html.ActionLink("Natación", "PrintCalendario", "Calendarios", new { disciplina = 1 }, new { @class = "btn btn-default  natacion" })

                @Html.ActionLink("Consolidado", "PrintCalendario", "Calendarios", new { disciplina = 7 }, new { @class = "btn btn-default" })
            </center>
        </div>
        <div class="site-homepage__section__content u-grid">
            <section id="cd-timeline">

                <ul class="cbp_tmtimeline">
                    @foreach (var item in Model.calendario)
                    {
                        <li>
                            <time class="cbp_tmtime" datetime=@item.Inicio.ToString("dd/MM/yyyy")>
                                <span>@item.Inicio.ToString("dd/MM/yyyy")</span>
                                <span>al @item.Fin.ToString("dd/MM/yyyy")</span>
                            </time>
                            <div class="cbp_tmicon @item.Disciplina.clase">
                                <img class="iconCalendario" src="@Url.Content(path + @item.Disciplina.clase + ".jpg")" />
                            </div>
                            <div class="cbp_tmlabel  @item.Disciplina.clase">
                                <h2>@item.Evento</h2>
                                <p>Disciplina: <strong>@item.Disciplina.TipoDisciplina</strong></p>
                                <p>Sede: <strong>@item.Sede</strong></p>
                                <p>Carácter del evento <strong>@item.Carácter</strong></p>
                            </div>
                        </li>
                    }

                </ul>
                <div class="espaciadogrande"></div>
                @*<center>

                        @Html.ActionLink("Ver todos los eventos", "calendarios", "resultados", null, new { @class = "btn btn--primaryapnea btn--lrg u-rounded" })
                    </center>*@
            </section>
        </div>
    </div>
</section>

@model List<FDPN.Models.Vivo>

@{
    string path = Url.Content("/Resultado");
}

@if (Model.Count() > 0)
{

        <div >
         
            <table class="tablaNormal">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Tiempo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @item.Nombre
                        </td>
                        <td>
                            @item.Fecha
                        </td>
                        <td>
                            <a href=@Url.Content(path + item.Directorio)>Ver resultados</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>

        </div>
    @*</div>*@
}

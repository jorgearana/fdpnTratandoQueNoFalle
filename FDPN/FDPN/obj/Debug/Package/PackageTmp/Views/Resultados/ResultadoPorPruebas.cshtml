@model FDPN.ViewModels.Resultados.ResultadosDeUnaPruebaViewModel

@{
    ViewBag.Title = "Resultado Por Pruebas";
}


<section class="site-homepage__section site-athletedetails">

    <div class="wrapper site-homepage__pushup">

        <header class="site-homepage__section__header">
            <h2 class="site-title site-title--basic--primary">@Model.torneo.MName </h2>
            <p class="u-type--medium u-type--delta u-spc-bottom--med">prueba @Model.prueba.distancia @Model.prueba.estilo de @Model.minima  a @Model.maxima  años</p>
        </header>
        <div class="site-homepage__section__content">
            <h2 class="u-type--gamma u-spc-bottom--med">Resultados</h2>
            <div class="table">
                <table class="table__data">
                    <thead>
                        <tr>
                           
                            <th>Puesto</th>
                            <th>Tiempo</th>
                            <th>Distancia</th>
                            <th>Estilo</th>
                            <th>Deportista</th>
                            <th>Sexo</th>
                            <th>Edad</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Resultadosfinales)
                        {
                            <tr>
                               
                                @if (item.PLACE < 4)
                                {
                                    <td>
                                        <div class="row">
                                            <div class="col-xs-2">@item.PLACE</div>
                                            <div class="col-xs-2"><div class=@("medalla"+(item.PLACE)) aria-hidden="true"></div></div>
                                            
                                        </div>

                                    </td>
                                }
                                else
                                {
                                    <td>@item.PLACE</td>
                                }
                                <td>@item.SCORE</td>
                                <td>@item.DISTANCE</td>
                                <td>@item.STROKE</td>
                                <td>@Html.ActionLink(@item.Athlete1.First + " " + @item.Athlete1.Last, "Nadador", "Resultados", new { id = item.AthleteId }, null)</td>
                                <td>@item.Athlete1.Sex</td>
                                <td>@item.Athlete1.Age</td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
        <button onclick="goBack()" class="btn btn--primaryapnea btn--lrg u-rounded" style="float: right;">Volver</button>
        <div class="espaciadogrande"></div>
    </div>
   
</section>


<script>
function goBack() {
    window.history.back();
}
</script>
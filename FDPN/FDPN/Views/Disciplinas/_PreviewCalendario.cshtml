@model List<FDPN.Models.Calendario>

@{
    string path = "~/Content/img/Imgsmall/";
    int disciplina = ViewBag.disciplina;
    string nombredisciplina = Model[0].Disciplina.clase + ".jpg";
}


<div class="site-homepage__pushup">
    <div class="BannerDelgado u-animation--fadeInSection" style="margin-top:10px;">
        <header class="site-homepage__section__header" style="padding: 0px 0">

            <div class="row cardsubtitulo-blanca">
                <div class="col-lg-12" style="text-align:center;">
                    <p class="formatted__hugephoto__title TextoBannerDelgado">
                        Calendarios
                        <img class="iconDisciplina" src="@Url.Content(path + nombredisciplina)" />

                    </p>
                </div>
            </div>

        </header>
        <div class="wrapper">
            <center>

                @Html.ActionLink("Imprimir Calendario", "PrintCalendario", "Calendarios", new { disciplina = disciplina }, new { @class = "btn btn-primary " + Model[0].Disciplina.clase, target = "_blank" })



            </center>
        </div>
    </div>
    @*<center>
            <p class="u-type--medium u-type--delta u-spc-bottom--med">Vea la versión imprimible de los calendarios</p>
        </center>*@
    <div class="site-homepage__section__content u-grid">
        <section id="cd-timeline">

            <ul class="cbp_tmtimeline">
                @foreach (var item in Model)
                {
                    <li>
                        <time class="cbp_tmtime" datetime=@item.Inicio.ToString("dd/MM/yyyy")>
                            <span>@item.Inicio.ToString("dd/MM/yyyy")</span>
                            <span>al @item.Fin.ToString("dd/MM/yyyy")</span>
                        </time>
                        <div class="cbp_tmicon @item.Disciplina.clase">
                            <img class="iconCalendario" src="@Url.Content(path + @item.Disciplina.clase + ".jpg")" />
                        </div>
                        <div class="cbp_tmlabel  @item.Disciplina.clase">
                            <h2>@item.Evento</h2>
                            <p>Disciplina: <strong>@item.Disciplina.TipoDisciplina</strong></p>
                            <p>Sede: <strong>@item.Sede</strong></p>
                            <p>Categorías <strong>@item.Observación</strong></p>
                        </div>
                    </li>
                }

            </ul>
            <div class="espaciadogrande"></div>
            @*<center>

                    @Html.ActionLink("Ver todos los eventos", "calendarios", "resultados", null, new { @class = "btn btn--primaryapnea btn--lrg u-rounded" })
                </center>*@
        </section>
    </div>





@model List<FDPN.Models.Fotos>
@{
    ViewBag.Title = "Listado de documentos";
    string titulo = ViewBag.Titulo;
    string path = Url.Content("../Content/img/Fotos/");
}

<div class="container">
    <h4 class="title">@titulo</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Descipción
                </th>
                <th>
                    Documento
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @item.Noticias.Titulo
                    </td>
                    <td>
                        <a href=@Url.Action(path + item.Nombrefoto) target="_blank">
                            <i class="fa fa-download" aria-hidden="true"></i> Ver documento
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model List<FDPN.Models.Vivo>
@{
    ViewBag.Title = "subvenciones";
    string path = Url.Content("../Resultados/");
}

<section class="site-contentpage site-homepage__pushup">
    @using (Html.BeginForm())
    {
        <header class="site-homepage__section__header">
            <h2 class="site-title site-title--ultra site-title--ultra--primary">Resultados en vivo</h2>
            @Html.TextBox("SearchString", null, new { @class = "btn btn--primary btn--lrg u-rounded" })
            <input type="submit" value="Buscar" class="btn btn--primary btn--lrg u-rounded" />
        </header>
    }
    <br />
    <p class="u-type--gamma">
        <table class="tablaNormal">
            <thead>
                <tr>

                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Ver</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Nombre
                        </td>
                        <td>
                            @item.Fecha.ToString("dd/MMM/yyyy")
                        </td>
                        <td>
                            <a href=@Url.Content(path + item.Directorio)>Ver resultados</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </p>

    <div class="espaciado"></div>


</section>

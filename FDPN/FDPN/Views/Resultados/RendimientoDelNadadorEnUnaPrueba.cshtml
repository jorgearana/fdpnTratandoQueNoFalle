@model FDPN.ViewModels.Resultados.RendimientoDeUnaPruebaViewModel

@{
    ViewBag.Title = "Rendimiento en una prueba";
    string path = "http://afiliaciones.jorgearananeyra.com/Content/Images";
}


<section class="site-ranking">
    <div class="wrapper site-homepage__pushup">
        <header class="site-homepage__section__header">
            <h2 class="site-title site-title--ultra site-title--ultra--primary">Rendimiento en una prueba</h2>
            <p class="u-type--medium u-type--delta u-spc-bottom--med">@Model.atleta.First @Model.atleta.Last</p>
            <h2 class="site-title site-title--ultra site-title--ultra--primary">Prueba: @Model.prueba.distancia  @Model.prueba.estilo Piscina Larga</h2>
            <div class="site-athleteswidget__photo">
                <img src=@Url.Content(path + "/" + Model.afiliado.RutaFoto + ".jpg")>
            </div>
        </header>

        <div id="js-table" class="site-contentpage js-table table">
            <table class="table__data">
                <thead>
                    <tr>
                        <th>Tiempo</th>
                        <th>Torneo</th>
                        <th>Fecha</th>                      
                        <th>Equipo</th>
                        <th>Piscina</th>
                        <th>Puntos</th>

                    </tr>
                </thead>
                <tbody> 
                    @foreach (var item in Model.ResultadosLarga)
                    {
                        <tr>
                            <td>@item.SCORE</td>
                            <td>@item.MEET1.MName</td>
                            <td>@item.MEET1.Start.ToShortDateString()</td>
                            <td>@item.TEAM1.TName</td>
                            <td>@item.COURSE</td>
                            <td>@item.PFina</td>
                        </tr>
                    }
                </tbody>
            </table>




        </div>
        <div class="espaciadogrande"></div>
        <header class="site-homepage__section__header">
           
            <p class="u-type--medium u-type--delta u-spc-bottom--med">@Model.atleta.First @Model.atleta.Last</p>
            <p class="u-type--medium u-type--delta u-spc-bottom--med">Prueba: @Model.prueba.distancia  @Model.prueba.estilo Piscina Corta </p>
        </header>
        <div id="js-table" class="js-table table">
            <table class="table__data">
                <thead>
                    <tr>
                        <th>Tiempo</th>
                        <th>Fecha</th>
                        <th>Equipo</th>
                        <th>Piscina</th>
                        <th>Puntos</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ResultadosCorta)
                    {
                        <tr>
                            <td>@item.SCORE</td>
                            <td>@item.MEET1.Start.ToShortDateString()</td>
                            <td>@item.TEAM1.TName</td>
                            <td>@item.COURSE</td>
                            <td>@item.PFina</td>
                        </tr>
                    }
                </tbody>
            </table>




        </div>

    </div>
    <div class="espaciadogrande"></div>
    <div class="site-homepage__split u-group u-animation--fadeInSection">
        @Html.ActionLink("Listado de nadadores", "Nadadores", "Resultados", null, new { @class = "btn btn--med btn--primary u-rounded" })

    </div>
    <div class="espaciadogrande"></div>
</section>
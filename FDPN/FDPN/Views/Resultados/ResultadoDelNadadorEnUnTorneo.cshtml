@model FDPN.ViewModels.Resultados.resultadodelnadadorenuntorneoViewModel
@{
    ViewBag.Title = "Resultado Del Nadador En Un Torneo";

    string path = "http://afiliaciones.fdpn.org/Content/Images";
}
<div class="row">
    <div class="col-md-10 ml-auto mr-auto">
        <div class="row">
            <div class="col-md-4">
                <div class="profile">
                    <img src=@Url.Content(path + "/" + Model.Inscripciones.RutaFoto + ".jpg") alt="No tiene foto" class="img-raised  img-fluid imagenperfil">
                </div>
            </div>
            <div class="col-md-8">
                <div class="name">
                    <h2 class="title">Resultados en un torneo</h2>
                    <h4 class="title">@Model.atleta.First @Model.atleta.Last en el torneo</h4>
                    <h4 class="title">@Model.torneo.MName - @Model.torneo.Start.ToString("dd/MMM/yyyy")</h4>
                </div>
            </div>
        </div>


    </div>
</div>

<div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Distancia</th>
                    <th>Estilo</th>
                    <th>Puesto</th>
                    <th>Tiempo</th>
                    <th>Puntos FINA</th>
                    <th>Final/Preliminar/Trial</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.resultados)
                {
                    <tr>
                        <td>@item.DISTANCE</td>
                        <td>@item.STROKE</td>
                        <td>@item.PLACE</td>
                        <td>@item.SCORE</td>
                        <td>@item.PFina</td>

                        @if (item.I_R == "L")
                        {
                            <td>@item.F_P en una posta  </td>
                        }
                        else
                        {
                            <td>@item.F_P  </td>
                        }

                    </tr>
                }
            </tbody>
        </table>




</div>
          
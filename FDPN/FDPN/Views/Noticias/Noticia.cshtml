@model FDPN.ViewModels.Noticia.DetalleNoticiaViewModel
@{
    ViewBag.Title = "Detalle de Noticia";
    string path = Url.Content("../Content/img/Fotos/");
}

@*<header class="site-homepage__section__header">
    <h2 class="site-title site-title--ultra site-title--ultra--primary">Detalle de noticia</h2>
</header>*@
@if (@Model.noticia.Youtube != null)
            {
    <div class="video-container">
        <iframe style="width: 100%; height: 100%;" src=@Model.noticia.Youtube frameborder="0" allowfullscreen=""></iframe>
        </div>
        <br />

        }

        <section class="site-news site-homepage__pushup u-bg">

            <div class="wrapper site-athleteswidget__info">

                <div class="site-news__visual u-animation--fadeInSection" data-wow-duration="700ms" data-wow-delay="100ms">


                    <div class="col-lg-12">
                        <h2 class="site-title ">@Model.noticia.Titulo</h2>

                        Publicado por <span><a class="userBy">Prensa</a></span> el <span>@Model.noticia.Fecha.ToShortDateString()</span>
                    </div>
                    <div class="espaciado"></div>
                    <div class="container">
                        <div class="row">

                            <div class="col-lg-4 col-md-4 col-sm-12">
                                @if (Model.fotos.Count > 1)
                                {
                                    for (int i = 0; i < 1; i++)
                                    {
                                        <div class="card">
                                            <a href=@Url.Action(path + Model.fotos[i].Nombrefoto) target="_blank">
                                                <div class="ImagenNoticia" style="background-image: url(@Url.Action(path + Model.fotos[i].Nombrefoto));"></div>
                                            </a>
                                        </div>
                                    }
                                    <div class="row">
                                        @for (int i = 1; i < Model.fotos.Count(); i++)
                                        { <div class="col-ld-4 col-md-6 col-sm-12">
                                            <div class="minicard">
                                                <a href=@Url.Action(path + Model.fotos[i].Nombrefoto) target="_blank">
                                                    <img src="@Url.Action(path + Model.fotos[i].Nombrefoto)" class="miniimagen" />
                                                </a>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    for (int i = 0; i < Model.fotos.Count; i++)
                                    {
                                        <div class="card">
                                            <a href=@Url.Action(path + Model.fotos[i].Nombrefoto) target="_blank">
                                                <div class="ImagenNoticia" style="background-image: url(@Url.Action(path + Model.fotos[i].Nombrefoto));"></div>
                                            </a>
                                        </div>
                                        }
                                        }





                                    </div>
                           
                            <div class="col-lg-8 col-md-8 col-sm-12">
                                @Html.Raw(Model.noticia.Larga.ToString())
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        @Html.Action("_PreviewNoticias", "home")

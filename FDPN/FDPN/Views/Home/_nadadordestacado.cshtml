@model FDPN.ViewModels.Home.NadadorDestacadoViewModels

@{ 
    string path = "http://afiliaciones.fdpn.org/Content/Images";
}

<div class="is-ontop">
    <header class="site-homepage__section__header">
        <h2 class="site-title site-title--ultra site-title--ultra--negative">Deportista destacado</h2>
        <h4>  </h4>
    </header>
    <div class="site-athleteswidget">
        <div class="js-FeaturedAthletes">

            <div class="site-athleteswidget__athlete">
                <div class="site-athleteswidget__photo site-athleteswidget__photo--negative">
                    <img src=@Url.Content(path +"/"+ Model.Inscripciones.RutaFoto + ".jpg")>
                </div>
                <div class="site-athleteswidget__info site-athleteswidget__info--negative">
                    <h3 class="site-athleteswidget__name">@Model.Inscripciones.Afiliado.Nombre <strong>@Model.Inscripciones.Afiliado.Apellido_Paterno</strong></h3>
                    <p class="site-athleteswidget__subtitle">@Model.resultados.Athlete1.Age años</p>
                    <p class="site-athleteswidget__subtitle">@Model.resultados.MEET1.MName</p>
                    <table class="site-rankingwidget__table">
                        <thead>
                            <tr>
                                @*<th>Puesto</th>*@
                                <th>Prueba</th>
                                <th>Score</th>
                                <th>Puntos FINA</th>
                            </tr>
                        </thead>
                        <tbody>
                            @*@foreach (var item in Model.resultados)
                            {*@
                                <tr>
                                    @*<td>@Model.resultados.PLACE</td>*@
                                    <td>@Model.resultados.DISTANCE  @Model.resultados.STROKE</td>
                                    <td>
                                        @Model.resultados.SCORE
                                    </td>
                                    <td>@Model.resultados.PFina</td>
                                </tr>
                            @*}*@
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <div class="site-athleteswidget">
         </div>
    <footer class="site-homepage__section__footer">
        @Html.ActionLink("Ver todos los nadadores", "Nadadores", "Resultados",null, new { @class = "btn btn--primaryapnea btn--lrg u-rounded" } )
     </footer>
    <center>
        <h6>* Se consideran los tiempos registrados a partir del año 2000</h6>
    </center>
</div>

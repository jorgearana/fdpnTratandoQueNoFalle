@model List<FDPN.Models.CursoCalentario>

@{
    string path = "~/Content/img/fondos/";
    string pathiconos = "../Content/img/Imgsmall/";
}

<div class="site-homepage__pushup">
    <div class="BannerDelgado u-animation--fadeInSection" style="margin-top:10px;">

        <header class="">
            <div class="row cardsubtitulo-blanca">
                <div class="col-lg-12" style="text-align:center;"><p class="formatted__hugephoto__title TextoBannerDelgado">Calendarios</p></div>
            </div>

        </header>
        <center>
            <p class="u-type--medium u-type--delta u-spc-bottom--med cardsubtitulo-blanca">Vea la versión imprimible de los calendarios</p>
        </center>
        <div class="wrapper">
            <center>
                @*<a href="~/Content/pdf/Calendario Masters.pdf" class = "btn btn-default  master">Masters</a>
        <a href="~/Content/pdf/Calendario Polo.pdf" class = "btn btn-default  wp">Polo Acuático</a>
        <a href="~/Content/pdf/calendario artistico.pdf" class = "btn btn-default  sincro">Natación Artística</a>
        <a href="~/Content/pdf/Calendario aguas.pdf" class="btn btn-default  aguas">Aguas Abiertas</a>
        <a href="~/Content/pdf/calendario clavados.pdf"class = "btn btn-default  clavados" > Clavados</a>
        <a href="~/Content/pdf/Calendario Natacion.pdf"class = "btn btn-default  natacion">Natación</a>
        <a href="~/Content/pdf/Calendario todas.pdf" class = "btn btn-default">Consolidado</a>*@
                @Html.ActionLink("Masters", "PrintCalendario", "Calendarios", new { disciplina = 6, target = "_blank" }, new { @class = "btn btn-default  master" })

                @Html.ActionLink("Polo Acuático", "PrintCalendario", "Calendarios", new { disciplina = 2, target = "_blank" }, new { @class = "btn btn-default  wp" })

                @Html.ActionLink("Natación Artística", "PrintCalendario", "Calendarios", new { disciplina = 3, target = "_blank" }, new { @class = "btn btn-default  sincro" })

                @Html.ActionLink("Aguas Abiertas", "PrintCalendario", "Calendarios", new { disciplina = 5, target = "_blank" }, new { @class = "btn btn-default  aguas" })

                @Html.ActionLink("Clavados", "PrintCalendario", "Calendarios", new { disciplina = 4, target = "_blank" }, new { @class = "btn btn-default  clavados" })

                @Html.ActionLink("Natación", "PrintCalendario", "Calendarios", new { disciplina = 1, target = "_blank" }, new { @class = "btn btn-default  natacion" })

                @Html.ActionLink("Consolidado", "PrintCalendario", "Calendarios", new { disciplina = 7, target = "_blank" }, new { @class = "btn btn-default todas" })

            </center>
        </div>
    </div>

    <div class="site-homepage__section__content u-grid">
        <section>
            <div class="row ">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card">
                            <div data-mh="card" class="calendarioficha @item.Disciplina.clase">
                                <div>
                                    <div class="cbp_tmicon @item.Disciplina.clase">
                                        <p class="cardsubtitulo-blanca">
                                            <img class="iconCalendario" src="@Url.Action(pathiconos + @item.Disciplina.clase + ".jpg")" />
                                            @item.Inicio.ToString("dd MMM yyyy") - @item.Fin.ToString("dd MMM yyyy")
                                        </p>
                                    </div>

                                    <hr />
                                    <h3 class="cardtitulo">@item.Evento</h3>
                                    <p class="cardsubtitulo">Sede: @item.Sede</p>
                                </div>
                                <div class="@item.Disciplina.clase">

                                    <p class="cardsubtitulo-blanca">Disciplina: @item.Disciplina.TipoDisciplina</p>
                                    <p class="cardsubtitulo">Categorías: @item.Observación</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="espaciado"></div>
            <center>

                @Html.ActionLink("Ver todos los eventos", "calendarios", "resultados", null, new { @class = "btn btn--primaryapnea btn--lrg u-rounded" })
            </center>
            <div class="espaciado"></div>
        </section>
    </div>
</div>



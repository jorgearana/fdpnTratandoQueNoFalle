</div>
<section class="site-news site-homepage__pushup">

    <div class="wrapper site-athleteswidget">
        <div class="">
    @foreach (var item in Model)
            {
        <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <a href=@Url.Content(path +  item.fotos[0].Nombrefoto) target="_blank">
                        <div class="site-news__visual u-animation--fadeInSection" data-wow-duration="700ms" data-wow-delay="100ms">
                            <div class="item-img-wrap ">
                                @if (item.fotos.Count() > 0)
                                {
                                    <div class="ImagenNoticia" style="background-image: url(@Url.Content(path +  item.fotos[0].Nombrefoto))"></div>
                                }
                                else
                                {
                                    <div class="ImagenNoticia" style="background-image: url(@Url.Content(path + "campodemarte.jpg"))"></div>
                                }
                            </div><!--item image hover-->

                        </div><!--blog post col end-->
                    </a>
                </div>
            </div>

            }
        </div>


    </div>
        <center>

            @Html.ActionLink("Ver todos los eventos", "Eventos", "noticias", null, new { @class = "btn btn--primary btn--lrg u-rounded" })
        </center>
    </section>


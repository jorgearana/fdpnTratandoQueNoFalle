@model List<FDPN.Models.Calendario>



<div class="wrapper site-homepage__pushup">
    <header class="site-homepage__section__header">
        <h2 class="site-title site-title--ultra site-title--ultra--primary">Calendarios</h2>
        <p class="u-type--medium u-type--delta u-spc-bottom--med">Eventos por realizarse</p>
    </header>
   

    <div class="site-homepage__section__content u-grid">
        <section >
            <div class="pure-g">
                @foreach (var item in Model)
            {  
                    <div class="pure-u-lg-7-24 pure-u-md-10-24 pure-u-sm-1 marco">
                    <div class="card">
                        <div class="calendarioficha @item.clase">
                            <div>
                                <p class="cardsubtitulo-blanca">@item.Inicio.ToString("dd MMM yyyy") - @item.Fin.ToString("dd MMM yyyy")</p>
                                <hr />
                                <h3 class="cardtitulo">@item.Evento</h3>
                                <p class="cardsubtitulo">Sede: @item.Sede</p>
                            </div>
                            <div class="@item.clase">
                                <p class="cardsubtitulo">Disciplina: @item.Disciplina</p>
                                <p class="cardsubtitulo-blanca">Observaciones: @item.Observación</p>
                                <p class="cardsubtitulo-blanca">Carácter: @item.Carácter</p>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>

            <div class="espaciado"></div>
            <center>

                @Html.ActionLink("Ver todos los eventos", "calendarios", "resultados", null, new { @class = "btn btn--primary btn--lrg u-rounded" })
            </center>
            <div class="espaciado"></div>
        </section>
    </div>
</div>



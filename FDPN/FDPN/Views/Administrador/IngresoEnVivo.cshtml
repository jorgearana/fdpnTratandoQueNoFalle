@model FDPN.Models.Vivo
@{
    ViewBag.Title = "Ingreso Resultados En Vivo";
    Layout = "~/Views/Shared/_LayoutWYSWYG.cshtml";
}

<div class="panel panel-primary">

    <div class="col-lg-12 text-center panel-heading panel-head">
        <h2 class="section-heading">Crear resultados en vivo</h2>
        <h5 class="section-subheading">Mediante esta página podrá crear el enlace para los resultados en vivo.</h5>
    </div>
</div>


<div class="col-lg-12 panel panel-primary">

    @using (Html.BeginForm())
    {
      
       
        <div class="panel panel-primary">
            @*<div class="panel-heading panel-head">Add Content</div>*@
            <div class="panel-body">

                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Torneo</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nombre)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Directorio</label>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(model => model.Directorio, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Directorio)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Fecha de inicio</label>
                        <div class="col-lg-9">
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control datefield" } })
                            @Html.ValidationMessageFor(model => model.Fecha)
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-lg-9"></div>
                        <div class="col-lg-3">
                            <button class="btn btn-success" id="btnSubmit" type="submit">
                                Submit
                            </button>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    }
</div>
@model FDPN.ViewModels.Administrador.BorrarViewModel

@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutWYSWYG.cshtml";
}

<h2>Borrar</h2>

<h3>¿Está seguro de borrar este dato?</h3>
<div>
    <h4>Noticias</h4>
    <hr />
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.noticia.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noticia.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.noticia.Corta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noticia.Corta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.noticia.Larga)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noticia.Larga)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.noticia.Fecha)
        </dt>

        <dd>
           @Model.noticia.Fecha.ToShortDateString()
        </dd>

       
        <dt>
            Video
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noticia.Youtube)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.noticia.CategoriaNoticia.TipoNoticia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noticia.CategoriaNoticia.TipoNoticia)
        </dd>

        <dt>
          Disciplina
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noticia.Disciplina.TipoDisciplina)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.noticiaid)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

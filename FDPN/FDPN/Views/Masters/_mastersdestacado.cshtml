
@model FDPN.ViewModels.Masters.NadadorMastersDestacadoViewModels

@{
    string path = "http://afiliaciones.fdpn.org/Content/Images";
}

<div class="is-ontop">
    <header class="site-homepage__section__header">
        <h2 class="site-title site-title--ultra site-title--ultra--negative">Deportista master destacado</h2>
        <h4>  </h4>
    </header>
    <div class="site-athleteswidget">
        <div class="js-FeaturedAthletes">

            <div class="site-athleteswidget__athlete">
                <div class="site-athleteswidget__photo site-athleteswidget__photo--negative">
                    <img src=@Url.Content(path +"/"+ Model.afiliado.RutaFoto + ".jpg")>
                </div>
                <div class="site-athleteswidget__info site-athleteswidget__info--negative">
                    @if (@Model.afiliado == null)
                    {
                        <h3 class="site-athleteswidget__name">@Model.resultados.AthleteMasters.First   <strong>@Model.resultados.AthleteMasters.Last</strong></h3>
                    }
                    else
                    {
                        <h3 class="site-athleteswidget__name">@Model.afiliado.Nombre <strong>@Model.afiliado.Apellido_Paterno</strong></h3>
                    }

                    <p class="site-athleteswidget__subtitle">@Model.resultados.AthleteMasters.Age años</p>
                    <p class="site-athleteswidget__subtitle">@Model.resultados.MEETMasters.MName</p>
                    <table class="site-rankingwidget__table">
                        <thead>
                            <tr>
                                @*<th>Puesto</th>*@
                                <th>Prueba</th>
                                <th>Score</th>
                                <th>Puesto</th>
                                <th>Puntos FINA</th>
                            </tr>
                        </thead>
                        <tbody>
                            @*@foreach (var item in Model.resultados)
                                {*@
                            <tr>
                                @*<td>@Model.resultados.PLACE</td>*@
                                <td>@Model.resultados.DISTANCE  @Model.resultados.STROKE</td>
                                <td>
                                    @Model.resultados.SCORE
                                </td>
                                <td>
                                    @Model.resultados.PLACE  
                                </td>
                                <td>@Model.resultados.PFina</td>
                            </tr>
                            @*}*@
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <div class="site-athleteswidget">
    </div>
    @*<footer class="site-homepage__section__footer">
            @Html.ActionLink("Ver todos los nadadores masters", "Nadadores", "Masters", null, new { @class = "btn btn--primaryapnea btn--lrg u-rounded" })
        </footer>*@

@model FDPN.Models.Banners

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutWYSWYG.cshtml";
    string path = Url.Content("../Content/img/Fotos/");
}

<h2>Borrar banner</h2>

<h3>¿Está seguro de borrar este banner?</h3>
<div>
    <h4>Banners</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BannerId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BannerId)
        </dd>

       

        <dt>
            Foto
        </dt>

        <dd>
            <img src="@Url.Action(path + Model.Foto)" class="bannerpreview" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.BannerId)
        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" />
            @Html.ActionLink("Regresar al listado", "Index")
        </div>
    }
</div>
